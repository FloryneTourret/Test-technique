{% extends 'base.html.twig' %}

{% block title %}Test technique{% endblock %}

{% block body %}
<div class="main">

    <h1> Liste d'articles</h1>
    <div class="uk-child-width-1-3@m" uk-grid uk-scrollspy="cls: uk-animation-fade; target: .uk-card; delay: 500; repeat: true"  id="list">
    {% for article in list_articles %}
        <div> 
            <a href="/article/{{article.id}}"> 
                <div class="uk-card uk-card-default"> 
                    <div class="uk-card-media-top"> 
                        <img src='{{article.picture}}' alt=""> 
                    </div> 
                    <div class="uk-card-body"> 
                        <h3 class="uk-card-title">{{article.title}}</h3> 
                        <p>{{article.author.username}}</p> 
                    </div> 
                </div> 
            </a> 
        </div>
    {% endfor %}
    </div>


    <ul class="uk-pagination uk-flex-center" uk-margin id="pagination">
            {% if page > 2 %}
            <li><a href="/">1</a></li>
             <li class="uk-disabled"><span>...</span></li>
            {% endif %}
            {% if page > 1 %}
             <li><a href="/page/{{page - 1}}">{{page - 1}}</a></li>
            {% endif %}

             <li class="uk-active"><span>{{page}}</span></li>

            {% if page < total %}
             <li><a href="/page/{{page + 1}}">{{page + 1}}</a></li>
            {% endif %}

            {% if page + 1 < total %}
            <li class="uk-disabled"><span>...</span></li>
            <li><a href="/page/{{total}}">{{total}}</a></li>
            {% endif %}
    </ul>
</div>
{% endblock %}
