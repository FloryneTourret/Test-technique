{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}

    <div class="login">

        <form action="{{ path('security_login') }}" method="post">
            <fieldset class="uk-fieldset">
                
                <legend class="uk-legend">Login</legend>
                
                <div class="uk-margin">
                    <input class="uk-input" type="text" placeholder="username" id="username" name="_username" value="{{ last_username }}">
                </div>
                <div class="uk-margin">
                    <input class="uk-input" type="password" placeholder="Password" id="password" name="_password">
                </div>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                
                <div class="uk-margin" uk-margin>
                    <button class="uk-button uk-button-default" type="submit" >Log In</button>
                </div>
                
            </fieldset>
        </form>
        
    </div>
        
{% endblock %}